/* miniprogram/pages/index/index.wxss */
.bg-image{
  width: 100vw;
  height: 100%;
  position: absolute;
  z-index: -1;
}
.btn-container{
  height: 46vh;
  width: 100vw;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: space-around;
  bottom: 300rpx;
  position: absolute;
}
.single-text{

  font-family: "Optician Sans";
  font-size: 80rpx;
  opacity: 0.2;
}
.logo-image{
  width: 20%;
  margin-left: 50%;
  transform: translateX(-50%);
  position: absolute;
  bottom: -100rpx;
}


/* 点击logo显示出来的组件 */
.logo-modal1{
  position: absolute;
  bottom: 0;
  z-index: 100;
  width: 100%;
  transform: translateY(500rpx)
}








/* ---------------- 动画部分 --------------- */
.html-btn{
  animation: btn-html 1s ease-in-out alternate-reverse infinite;
}
.css-btn{
  animation: btn-css 1s ease-in-out 1s alternate-reverse infinite;
  transform: scale(1.05)
}



@keyframes btn-html {
  /* 0%{
    transform: scale(1)
  }
  50%{
    transform: scale(1)
  }
  100%{
    transform: scale(1.1)
  } */
    from{
    transform: scale(1)
  }
  to{
    transform: scale(1.05)
  }
}

@keyframes btn-css {
  /* 0%{
    transform: scale(1)
  }
  50%{
    transform: scale(1.1)
  }
  100%{
    transform: scale(1.1)
  } */
  from{
    transform: scale(1)
  }
  to{
    transform: scale(1.05)
  }
